generator client {
  provider = "prisma-client-js"
  // output   = "../app/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
	directUrl = env("DIRECT_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id        String   @id
  name      String?
  email     String?  @unique
  role      Role     @default(USER)
  image     String?
  posts     Post[]
}

model Post {
  id        String   @id @default(cuid())
  title     String
  content   String
	imageUrl  String?
  published Boolean  @default(false)
  createdAt DateTime @default(now())
  author    User?    @relation(fields: [authorId], references: [id])
  authorId  String?
}

model SliderImage {
  id        String   @id @default(cuid())
  imageUrl  String
  altText   String?
  order     Int      @default(0)
  createdAt DateTime @default(now())

  @@index([order]) // Добавляем индекс для быстрой сортировки
}